<h1>CENTRO MÉDICO TU MEJOR OPCIÓN</h1>
<h2>LISTADO DE PACIENTES</h2>

<table>
    <thead>
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Edad</th>
            <th>Telefono</th>
            <th>Opciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each pacientes}}
        <tr>
            <form action="/pacientes/actualizar/{{cedula}}" method="post">
            <td><input type="text" value="{{cedula}}" disabled></td>
            <td><input type="text" id="nombre" name="nombre" value="{{nombre}}" {{#ifCond @key '!='
                        ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td><input type="text" id="apellido" name="apellido" value= "{{apellido}}" {{#ifCond @key '!='
                        ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td><input type="text" id="edad" name="edad" value= "{{edad}}" {{#ifCond @key '!='
                        ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td><input type="number" id="telefono" name="telefono" value= "{{telefono}}" {{#ifCond @key '!='
                        ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
            <td>
                {{#if ../estado}}
                <a href="/pacientes/eliminar/{{cedula}}">Eliminar</a> <br><br> 
                <a href="/pacientes/enviar/{{@key}}">Actualizar</a>
                {{else}}
                <input type="submit" value="Enviar">
                {{/if}}
            </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>

<a href="/" class="volver">Volver</a>
<a href="pacientes/agregar-paciente" class="agregar">Agregar Paciente</a>